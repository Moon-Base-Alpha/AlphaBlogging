@using AlphaBlogging.Models;

@model Post

  <h5>@Model.Title</h5>
  <p>@Model.Body</p>
  <small>Created: @Model.Created</small><br />
  <small>Updated: @Model.Updated</small>

<div class="">
    @{
        if (Model.Tags != null)
        {
            //<div class=" rounded m-3" >
            @foreach (var tag in Model.Tags)
            {
                <partial name="_TagPartial" model="tag" />
            }
            //</div>
        }
        else
        {
            <p>No tags</p>
        }
    }


    @{
        if (  Model.Comments != null && Model.Comments.Count() > 0)
        {       
            @foreach (var comment in Model.Comments.Reverse())
            {
                <div class="container p-3 my-3 text-black" style="background-color:lightblue">
                @*<div  style="border-color:black; margin-block:7px; background-color:lightblue">*@
                     <partial name="_Comment"  model="comment"/> 
                 

                    @Html.ActionLink("Add Comment", "Create", "Comment", new {postId = Model.Id} )
                    @Html.ActionLink("Edit Comment", "Edit", "Comment", new {postId = Model.Id} )
                    @Html.ActionLink("Delete Comment", "Remove", "Comment", new {postId = Model.Id} )


                </div>
                <hr />
           
            }
        }
        else
        {
            <h6>No comments yet</h6>        
        }
    }
</div>