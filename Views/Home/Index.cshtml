@using AlphaBlogging.Models;
@model IEnumerable<AlphaBlogging.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

@*<div><partial name="_Search" /></div>*@
<div class=" jumbotron text-center bg-transparent text-light">
    <h1 class="display-1 text-center " style="font-family: 'Raleway', sans-serif; font-variant:small-caps; text-shadow: 2px 2px 4px #000000;">&#64;lphaBlogging</h1>
    <p class="col-lg-8 offset-lg-2 col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-xs-12  lead text-center">
        The Blog Comunity where everything is possible. Meet new friends And read about your favorite topics.
        Why not start your own blog? It’s easy-peasy, just register an account and start blogging!
    </p>
</div>
<h1>Recent Blog Updates</h1>
    @foreach (var item in Model)
   {
       <div class="card flex-row flex-wrap postcontainer mb-2 text-light">

    <div class="card-header border-0">
        <img src="~/image/@Html.DisplayFor(modelItem => item.BlogImage)" alt="" width="300">
    </div>
    <div class="card-block px-2 p-3 d-flex flex-column">
        <h4 class="m-0 card-title">@Html.DisplayFor(modelItem => item.Title)</h4>
        <p class="m-0 font-italic">A Blog by @Html.DisplayFor(modelItem => item.Author.UserName) | Updated: @Html.DisplayFor(modelItem => item.Updated)</p>
        <p class="mt-3 card-text d-inline-block text-truncate" style="max-width: 300px;">
            @Html.DisplayFor(modelItem => item.Description)
</p>
        <a href="Blog/BlogView/@item.Id" class="btn btn-primary mt-auto">Read more...</a>
        @* @Html.ActionLink("Details", "BlogView",  new { id=item.Id }) *@
    </div>
    <div class="w-100"></div>
</div>

   }


