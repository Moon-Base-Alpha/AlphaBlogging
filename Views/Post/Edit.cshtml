@model Post

<h4>Edit Post</h4>
<hr />
<div class="row">
    <div class="col-md-6 ">
        <form method="post">
            <div class="form-group mb-3">
                <label>Title</label>
                <input asp-for="Title" class="form-control bg-light" />
            </div>
             <div class="form-group mb-3">
                <label>Body</label>
                <textarea asp-for="Body" class="form-control bg-light" rows="3" valuedata-""></textarea>
            </div>
            <div class="form-group mb-3">
                <label>Tags</label>
                <input asp-for="Tags" class="form-control bg-light" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" name="name" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
