@using AlphaBlogging.Models;
@model AlphaBlogging.Models.ViewModels.PostVM
<link rel="stylesheet" href="~/css/site.css" />

@{
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <br />
<h1>Edit Post</h1>
<hr />
<div class="row">
    <div class="col-md-6 ">
        <form method="post">
            <div class="form-group mb-3">
                <label>Title</label>
                <input asp-for="Title" class="form-control bg-light" />
            </div>
             <div class="form-group mb-3">
                <label>Content</label>
                <textarea asp-for="Body" class="form-control bg-light" rows="5" valuedata-""></textarea>
            </div>
            <div class="form-group mb-3">
                <label>Tags</label>
                @*<input asp-for="Tags" class="form-control bg-light" />*@
            </div>
             <div class="keyHandler">
                <button type="button" id="addKey">+</button>
                <input type="text" placeholder="Keyword + Enter" id="keysInput">
            </div>
            <div class="addedKeysHolder"></div>
            <!-- Just give this input the name="etc" attribute -->
            @*<input asp-for="Tags" type="hidden" id="lkey" name="Tags">*@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" name="name" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

