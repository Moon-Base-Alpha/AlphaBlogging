@model AlphaBlogging.Models.Blog

@{
    ViewData["Title"] = "Edit blog";
}
@{
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <br />
<h1>Edit blog</h1>
<hr />
<div class="row">
    <div class="col-md-6 ">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <h4>Title</h4>
                <input asp-for="Title" class="form-control bg-light" />
            </div>
             <div class="form-group mb-3">
                <textarea asp-for="Body" class="form-control bg-light" rows="5" valuedata-""></textarea>
            </div>
            <div class="form-group mb-3">
               
                <img src="@("~/image/"+Model.BlogImage)" asp-append-version="true" width="300px" />
                 <input asp-for="ImageFile" accept="image/*" />
            </div>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" name="name" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

