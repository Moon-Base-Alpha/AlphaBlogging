@model AlphaBlogging.Models.Blog

@{
    ViewData["Title"] = "Edit blog";
}

<h4>Edit blog</h4>
<hr />
<div class="row">
    <div class="col-md-6 ">
        <form method="post">
            <div class="form-group mb-3">
                <label>Title</label>
                <input asp-for="Title" class="form-control bg-light" />
            </div>
             <div class="form-group mb-3">
                <textarea asp-for="Body" class="form-control bg-light" rows="5" valuedata-""></textarea>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" name="name" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Bloglist">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
