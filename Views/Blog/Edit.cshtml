@model AlphaBlogging.Models.Blog

@{
    ViewData["Title"] = "Edit blog";
}
@{
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <br />
<h1>Edit blog</h1>
<hr />
<div class="row">
    <div class="col-md-6 ">
        <form method="post">
            <div class="form-group mb-3">
                <h4>Title</h4>
                <input asp-for="Title" class="form-control bg-light" />
            </div>
            <div class="form-group mb-3">
                <h4>Description</h4>
                <textarea id="limitedtextarea" asp-for="Description" class="form-control bg-light" rows="5" placeholder="Type a short description of the blog here..." 
                        onKeyDown="limitText(this.form.limitedtextarea,this.form.countdown,128);"
                          onKeyUp="limitText(this.form.limitedtextarea,this.form.countdown,128);">
                </textarea><br>
                <font size="2">You have <input readonly type="text" name="countdown" size="1" value="128"> characters left.
                </font>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
             <div class="form-group mb-3">
                <textarea id="limitedtextarea" asp-for="Body" class="form-control bg-light" rows="5" placeholder="Type the full blog description here..." 
                        onKeyDown="limitText(this.form.limitedtextarea,this.form.countdown,1024);"
                          onKeyUp="limitText(this.form.limitedtextarea,this.form.countdown,1024);">
                </textarea><br>
                <font size="2">You have <input readonly type="text" name="countdown" size="1" value="1024"> characters left.
                </font>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogImage" class="control-label"></label>
                <input asp-for="BlogImage" class="form-control" />
                <span asp-validation-for="BlogImage" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" name="name" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Bloglist">Back to List</a>
</div>*@
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
